
# runthread.cpp is built into a seprate shared-library
#   see bindings/samoa/Jamfile
python-extension _core :
    [ glob *.cpp : runthread.cpp coros.cpp ]
    /samoa//libsamoa
    /pysamoa//libpysamoa
    /root//boost_system
    /root//boost_python
    /root//boost_regex
;

install dist : _core : <location>$(INSTALL)/samoa/core ;

